{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./packages"
  },
  "exclude": ["node_modules", "**/test/*"],
  "references": [
    { "path": "./packages/did" },
    { "path": "./packages/record" }
  ]
}
